<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task|  %>
    <% if task.completed %>
      <% icon = "<i class='far fa-check-square'></i>" %>
    <% else  %>
     <% icon =  "<i class='far fa-square'></i>" %>
    <% end %>
  <li><%= icon.html_safe%>

  <%= link_to task.title, task_path(task.id) %>

  <%= link_to task_path(task), {method: :delete, data: { confirm: "Are you sure?" }} do %>
    <i class="far fa-trash-alt" ></i>
  <% end %>

    </li>
  <% end %>
  <li><%= link_to "new task", tasks_new_path %></li>

</ul>



